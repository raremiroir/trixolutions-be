/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;


/* Reset */
html,
body {
  --custom-font-family: quasimoda, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu,
    Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif;

  padding: 0;
  margin: 0;
  font-family: var(--custom-font-family);
  min-height: 100vh;
  width: 100vw;
  overflow-x: hidden;
}